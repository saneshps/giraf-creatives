# Rewrite rules
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Allow rewrites for /in/blog-details/slug
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Rewrite /in/blog-details/{slug} to in/blog-details.php?slug={slug}
    RewriteRule ^in/blog-details/([A-Za-z0-9-]+)/?$ in/blog-details.php?slug=$1 [L]

    # Optional: generic rule for in/{page} -> in/{page}.php
    RewriteCond %{DOCUMENT_ROOT}/in/$1.php -f
    RewriteRule ^in/([^/]+)/?$ in/$1.php [L]
</IfModule>

